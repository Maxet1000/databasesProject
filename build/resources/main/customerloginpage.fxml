    <AnchorPane maxHeight="15.0" prefHeight="15.0" />
    <PasswordField fx:id="txtPassword" maxWidth="300.0" minWidth="50.0" prefWidth="200.0" promptText="Enter a solid password" />
    <AnchorPane maxHeight="15.0" minHeight="15.0" prefHeight="15.0" prefWidth="200.0" />
    <Button fx:id="btnLogin" mnemonicParsing="false" prefWidth="100.0" stylesheets="@styles.css" text="Login" />
