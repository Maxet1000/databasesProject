<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="be.kuleuven.VGHF.controller.ProjectMainController">
   <top>
      <GridPane prefWidth="500.0" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Button fx:id="btnHome" mnemonicParsing="false" prefHeight="30.0" prefWidth="350.0" text="Home" />
            <Button fx:id="btnAllGames" mnemonicParsing="false" prefHeight="30.0" prefWidth="350.0" text="ALL Games" GridPane.columnIndex="1" />
            <Button fx:id="btnNewGames" mnemonicParsing="false" prefHeight="30.0" prefWidth="350.0" text="NEW Games" GridPane.columnIndex="2" />
            <Button fx:id="btnRetroGames" mnemonicParsing="false" prefHeight="30.0" prefWidth="350.0" text="RETRO Games" GridPane.columnIndex="3" />
            <Button fx:id="btnInfo" mnemonicParsing="false" prefHeight="30.0" prefWidth="350.0" text="Info" GridPane.columnIndex="4" />
         </children>
      </GridPane>
   </top>
   <center>
      <StackPane fx:id="stackPane" prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <StackPane fx:id="paneHome" prefHeight="200.0" prefWidth="200.0">
               <children>
                  <Text fx:id="txtVGHF" strokeType="OUTSIDE" strokeWidth="0.0" text="Video Game History Foundation" textAlignment="CENTER" wrappingWidth="312.03125">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Text>
               </children>
            </StackPane>
             <StackPane fx:id="paneInfo" prefHeight="200.0" prefWidth="200.0">
                 <children>
                     <Text fx:id="txtInfo" strokeType="OUTSIDE" strokeWidth="0.0" text="INFO" textAlignment="CENTER" wrappingWidth="312.03125">
                         <font>
                             <Font size="24.0" />
                         </font>
                     </Text>
                 </children>
             </StackPane>
         </children>
      </StackPane>
   </center>
</BorderPane>
