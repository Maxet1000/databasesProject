                              <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Search: ">
                                 <font>
                                    <Font size="16.0" />
                                 </font>
                              </Text>
                              <TextField fx:id="txtSearch" prefHeight="25.0" prefWidth="300.0" promptText="Type here" />
