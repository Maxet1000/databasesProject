               <children>
                  <HBox prefHeight="5.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="btnAddGameToCart" minHeight="55.0" mnemonicParsing="false" prefHeight="55.0" prefWidth="1000.0" stylesheets="@styles.css" text="Rent selected game(s) for two weeks" />
