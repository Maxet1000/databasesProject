                        <Text fill="WHITE" layoutY="17.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Purchasing" />
                     </children>
                  </StackPane>
                  <TableView fx:id="tblBuyCart" prefHeight="100.0" prefWidth="200.0">
